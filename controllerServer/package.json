{
  "name": "payment-notification-system",
  "version": "1.0.0",
  "description": "Monitor API endpoints and send SMS/Email notifications",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"node control-server.js\" \"node server.js\"",
    "dev": "concurrently \"nodemon control-server.js\" \"nodemon server.js\"",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\""
  },
  "keywords": ["notification", "api", "monitoring", "sms", "email"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "concurrently": "^9.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
